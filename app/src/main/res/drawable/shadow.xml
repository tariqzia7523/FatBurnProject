<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- Drop Shadow Stack -->
    <item>
        <shape>
            <solid android:color="@color/temp_shadow" />
            <corners android:radius="@dimen/_8sdp" />
        </shape>
    </item>
    <item>
        <shape>
            <padding
                android:bottom="@dimen/_1sdp"
                android:left="@dimen/_1sdp"
                android:right="@dimen/_1sdp"
                android:top="@dimen/_1sdp" />

            <solid android:color="#05cccccc" />

            <corners android:radius="@dimen/_8sdp" />
        </shape>
    </item>
    <item>
        <shape>
            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp" />

            <solid android:color="#0acccccc" />

            <corners android:radius="5dp" />
        </shape>
    </item>
    <item>
        <shape>
            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp" />

            <solid android:color="#0fcccccc" />

            <corners android:radius="@dimen/_8sdp" />
        </shape>
    </item>
    <item>
        <shape>
            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp" />

            <solid android:color="#14cccccc" />

            <corners android:radius="@dimen/_8sdp" />
        </shape>
    </item>

    <!-- Background -->
    <item>
        <shape>
            <solid android:color="#fff" />
            <stroke
                android:color="@color/grey"
                android:width="1px"/>

            <corners android:radius="@dimen/_8sdp" />
        </shape>
    </item>

</layer-list>