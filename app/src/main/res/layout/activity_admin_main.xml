<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminMainActivity">
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:tabIndicatorColor="@color/price_text_bold"
        app:tabMode="fixed"
        app:tabTextColor="@color/temp"
        app:tabSelectedTextColor="@color/price_text_bold"
        app:tabTextAppearance="@style/CustomTabText"/>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tabs"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />



    <ImageView
        android:id="@+id/add_class"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/_20sdp"
        android:src="@drawable/add"/>
    <ImageView
        android:id="@+id/add_about"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_alignParentRight="true"
       android:layout_above="@+id/add_class"
        android:layout_margin="@dimen/_20sdp"
        android:src="@drawable/help"/>
    <ImageView
        android:id="@+id/add_faq"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/add_about"
        android:layout_margin="@dimen/_20sdp"
        android:src="@drawable/question"/>

</RelativeLayout>